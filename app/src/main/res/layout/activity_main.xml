        android:scaleType="centerCrop"

        android:id="@+id/img2"
        android:src="@drawable/img2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_row="0"
        app:layout_column="1"
        />
    <ImageView
        android:scaleType="centerCrop"

        android:id="@+id/img3"
        android:src="@drawable/img3"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_row="0"
        app:layout_column="2"
        />
    <ImageView
        android:scaleType="centerCrop"

        android:id="@+id/img4"
        android:src="@drawable/img4"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_row="1"
        app:layout_column="0"
        />
    <ImageView
        android:scaleType="centerCrop"

        android:id="@+id/img5"
        android:src="@drawable/img5"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_row="1"
        app:layout_column="1"
        />
    <ImageView
        android:scaleType="centerCrop"

        android:id="@+id/img6"
        android:src="@drawable/img6"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_row="1"
        app:layout_column="2"
        />
