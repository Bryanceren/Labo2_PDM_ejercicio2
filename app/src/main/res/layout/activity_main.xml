        app:layout_rowWeight="1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_row="2"
        app:layout_column="1"
        />
    <ImageView
        android:scaleType="centerCrop"

        android:id="@+id/img9"
        android:src="@drawable/img9"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_row="2"
        app:layout_column="2"
        />
    />

</android.support.v7.widget.GridLayout>